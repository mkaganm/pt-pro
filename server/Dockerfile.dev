# server/Dockerfile.dev
FROM golang:1.22-alpine

WORKDIR /app

# Install Air for hot-reloading
RUN go install github.com/air-verse/air@latest

# Copy go mod files first for caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run with Air
CMD ["air", "-c", ".air.toml"]
