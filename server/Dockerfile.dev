# server/Dockerfile.dev
FROM golang:1.24-alpine

WORKDIR /app

# Install Air for hot-reloading
RUN go install github.com/air-verse/air@v1.61.0

# Copy go.mod first
COPY go.mod ./

# Copy source code
COPY . .

# Download dependencies (generates go.sum if needed)
RUN go mod tidy

# Expose port
EXPOSE 8080

# Run with Air
CMD ["air", "-c", ".air.toml"]
